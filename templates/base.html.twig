<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        <link rel="icon" href="{{ asset('assets/image/favicon.png') }}" />
        {% block stylesheets %}

            <link rel="stylesheet" href="{{ asset('assets/css/global.scss') }}" />
            <link href="https://fonts.googleapis.com/css?family=Roboto:300i,400i,500,700,900" rel="stylesheet">

            {# 'app' must match the first argument to addEntry() in webpack.config.js #}
            {{ encore_entry_link_tags('app') }}

            <!-- Renders a link tag (if your module requires any CSS)
                 <link rel="stylesheet" href="/build/app.css"> -->
            <link rel="stylesheet" href="{{ asset('assets/css/app.css') }}" />

        {% endblock %}
    </head>
    <body>

        <section id="head" class="container-fluid">


            <!--/.Navbar-->
            <nav class="navbar navbar-expand-lg justify-content-end ">
                <div class="col-lg-3">
                    <a class="navbar-brand" href="{{ path('customer') }}">
                        <img src="{{ asset('assets/image/Black_logo.png') }}" class="logo img-fluid" alt="Logo Brush&Code"/>
                    </a>
                </div>

                <div class="col-lg-9">
                    <div id="menu_burger">
                        <a href="#popup1">
                            <img
                                    src="{{ asset('assets/image/menu_burger.png') }}"
                                    class="menu"
                                    alt="Menu burger"
                            >
                        </a>
                        <div id="popup1" class="overlay">
                            <div class="popup ">
                                <a class="close" href="{{ path('customer') }}" >
                                    <img alt="menu_burger"
                                         class="menu"
                                         src="{{ asset('assets/image/menu_burger.png') }}"
                                    >
                                </a>
                                <div class="content_menu">

                                    <nav id="site-navigation_2">
                                            <div class="container">
                                                <ul class="nav-pills nav-stacked mr-auto menu-text text-center">
                                                    <li class="nav-item">
                                                        <a class="nav-link"
                                                           href="https://www.projets-opc-nana.com/"
                                                           target="_blank"
                                                        >
                                                            L'Agence
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link"
                                                           href="https://www.projets-opc-nana.com/catalogue-de-services/"
                                                           target="_blank"
                                                        >
                                                            Nos services
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link"
                                                           href="https://www.projets-opc-nana.com/nos-references/"
                                                           target="_blank"
                                                        >
                                                            Nos références
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link"
                                                           href="https://www.projets-opc-nana.com/qui-sommes-nous/"
                                                           target="_blank"
                                                        >
                                                            Qui sommes nous?
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link"
                                                           href="https://www.projets-opc-nana.com/le-blog/"
                                                           target="_blank"
                                                        >
                                                            Le blog
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link"
                                                           href="https://www.projets-opc-nana.com/contact/"
                                                           target="_blank"
                                                        >
                                                            Contact
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                                        <a href="{{ path('fos_user_security_logout') }}">
                                                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                                                        </a>
                                                        {% else %}
                                                        <a href="{{ path('customer') }}">Espace client</a>
                                                        {% endif %}
                                                    </li>
                                                </ul>
                                            </div>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>






        </section>
        <section id="content" class="container-fluid">
            {% block body %}{% endblock %}
        </section>
        <section id="footer" class="container-fluid">
            <div class="container">
                <nav class="text-center nav_footer">
                    <div class="row">
                        <div class="col-md-3">
                            <a href="">Mentions Légales</a>
                        </div>
                        <div class="col-md-3">
                            <a href="">Conditions générales d'utilisations</a>
                        </div>
                        <div class="col-md-3">
                            <a href="">Politiques de confidentialités</a>
                        </div>
                        <div class="col-md-3">
                            <a href="">Copyright ©BrushAndCode-2019- Tous droits réservés -</a>
                        </div>
                    </div>
                </nav>
            </div>
        </section>



        {% block javascripts %}

            {{ encore_entry_script_tags('app') }}

            <!-- Renders app.js & a webpack runtime.js file
                <script src="/build/runtime.js"></script>-->
                <script src="{{ asset('build/runtime.js') }}"></script>
                <script src="{{ asset('assets/js/app.js') }}"></script>
                <script src="{{ asset('build/app.js') }}"></script>

        {% endblock %}
    </body>
</html>
