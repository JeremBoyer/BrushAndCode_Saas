{% trans_default_domain 'FOSUserBundle' %}


{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <div class="container">

        <div class="row">
            <a class="col-md-4 text-center btn-gradient" href="{{ path('customer') }}">

                <span class="norm_white text-center">
                        Pas encore inscrit?
                </span>

            </a>
            <div class="col-md-4">

            </div>
            <a class="col-md-4 text-center btn-gradient" href="{{ path('customer') }}">

                <span class="norm_white text-center">
                        Un devis?
                </span>

            </a>
        </div>
        <div class="form-group">

            {% if csrf_token %}
                <input class="form-control" type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}



            <h4>
                <label for="username">Votre email</label>
            </h4>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />

            <h4>
                <label for="password">Votre mot de passe</label>
            </h4>
            <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" />

            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <h4>
                <label for="remember_me">Se souvenir de moi</label>
            </h4>


            <button type="submit" class="btn-gradient mb-4" id="_submit" name="_submit">
                <span class="text_btn">
                    Connexion
                </span>
            </button>
        </div>
    </div>

</form>